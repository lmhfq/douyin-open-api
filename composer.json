{
    "name": "lmh/douyin-open-api",
    "description": "抖音开放普平台",
    "authors": [
        {
            "name": "lmh",
            "email": "lmh@weiyian.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lmh\\DouyinOpenApi\\": "src/"
        }
    },

    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-redis": "*",
        "ext-libxml": "*",
        "guzzlehttp/guzzle": "^6.5",
        "pimple/pimple": "^3.0",
        "illuminate/support": "^5.8",
        "monolog/monolog": "^1.22 || ^2.0"

    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "psr-4": {
            "Lmh\\DouyinOpenApi\\Test\\": "tests/"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    }
}
